        "url": {
          "raw": "http://localhost:3001/api/products?category=Смартфоны&minPrice=10000&maxPrice=50000&sort=price_asc", 
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["api", "products"],
          "query": [
