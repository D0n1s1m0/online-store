{
  "name": "online-store",
  "version": "1.0.0",
  "description": "Интернет-магазин (Практики 3-4)",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "sass": "sass src/style.scss public/css/style.css --watch",
    "dev:all": "concurrently \"npm run dev\" \"npm run sass\"",
    "kill": "lsof -ti:3001 | xargs kill -9 2>/dev/null || echo 'Порт 3001 свободен'",
    "reset": "npm run kill && npm run dev"
  },
  "dependencies": {
    "cors": "^2.8.6",
    "express": "^4.22.1",
    "nanoid": "^3.3.11",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.1.14",
    "sass": "^1.69.5"
  }
}
